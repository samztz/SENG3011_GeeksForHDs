{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "types": ["node"],
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"],
      "@models/*": ["src/models/*"],
      "@routes/*": ["src/routes/*"],
      "@controllers/*": ["src/controllers/*"],
      "@utils/*": ["src/utils/*"]
    },
  },
  "exclude": ["node_modules"],
}